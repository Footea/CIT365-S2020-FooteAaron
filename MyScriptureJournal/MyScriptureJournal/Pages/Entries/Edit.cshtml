@page "{id:int}"
@model MyScriptureJournal.Pages.Entries.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>JournalEntry</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="JournalEntry.ID" />
            <div class="form-group">
                <label asp-for="JournalEntry.DatePosted" class="control-label"></label>
                <input asp-for="JournalEntry.DatePosted" class="form-control" />
                <span asp-validation-for="JournalEntry.DatePosted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JournalEntry.Book" class="control-label"></label>
                <input asp-for="JournalEntry.Book" class="form-control" />
                <span asp-validation-for="JournalEntry.Book" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JournalEntry.Chapter" class="control-label"></label>
                <input asp-for="JournalEntry.Chapter" class="form-control" />
                <span asp-validation-for="JournalEntry.Chapter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JournalEntry.Verse" class="control-label"></label>
                <input asp-for="JournalEntry.Verse" class="form-control" />
                <span asp-validation-for="JournalEntry.Verse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JournalEntry.Note" class="control-label"></label>
                <input asp-for="JournalEntry.Note" class="form-control" />
                <span asp-validation-for="JournalEntry.Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" /> |
                <a asp-page="./Index" value="Save" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
