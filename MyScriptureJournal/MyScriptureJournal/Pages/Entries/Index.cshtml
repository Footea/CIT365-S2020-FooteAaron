@page
@model MyScriptureJournal.Pages.Entries.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Your Favorites</h1>

<p>
    <a asp-page="Create" class="btn btn-dark">Add Entry</a>
</p>

<form asp-page="./Index" method="get">
    <div class="form-actions no-Color">
        <p>
            Note Keyword:
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-secondary" /> |
            <a asp-page="./Index" class="btn btn-primary">Back to full List</a>
        </p>

    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort">
                    @Html.DisplayNameFor(model => model.JournalEntries[0].DatePosted)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.BookSort">
                @Html.DisplayNameFor(model => model.JournalEntries[0].Book)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JournalEntries[0].Chapter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JournalEntries[0].Verse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JournalEntries[0].Note)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.JournalEntries)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DatePosted)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Book)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Chapter)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Verse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    
                    <a  asp-page="./Edit" asp-route-id="@item.ID" class="btn btn-warning">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID"  class="btn btn-info">Details</a> |
                    <a  asp-page="./Delete" asp-route-id="@item.ID"  class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
